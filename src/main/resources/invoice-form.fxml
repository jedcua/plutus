<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPaneRoot" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.jedcua.controller.InvoiceFormController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="invoice-form-container" stylesheets="@style.css">
         <children>
             <Label alignment="BOTTOM_LEFT" layoutX="21.0" layoutY="47.0" styleClass="lbl-light" text="Invoice Form">
                 <font>
                     <Font size="30.0" />
                 </font>
             </Label>
            <AnchorPane layoutY="90.0" prefHeight="450.0" prefWidth="800.0" styleClass="invoice-form">
               <children>
                  <JFXComboBox fx:id="cmbStores" labelFloat="true" layoutX="20.0" layoutY="27.0" prefHeight="26.0" prefWidth="298.0" promptText="Select a store" />
                  <JFXButton layoutX="680.0" layoutY="27.0" mnemonicParsing="false" styleClass="btn-dark" text="Add Product" />
                   <TableView editable="true" layoutX="20.0" layoutY="74.0" prefHeight="320.0" prefWidth="760.0" stylesheets="table-view.css">
                       <placeholder>
                           <Label text="Select a store, then add products by clicking 'Add Product'" />
                       </placeholder>
                       <columns>
                           <TableColumn prefWidth="300.0" resizable="false" text="Name">
                               <cellValueFactory>
                                   <PropertyValueFactory property="name" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn prefWidth="100.0" resizable="false" styleClass="col-amount" text="Price">
                               <cellValueFactory>
                                   <PropertyValueFactory property="price" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn prefWidth="70.0" resizable="false" text="Unit">
                               <cellValueFactory>
                                   <PropertyValueFactory property="unit" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn prefWidth="100.0" resizable="false" text="Quantity">
                               <cellValueFactory>
                                   <PropertyValueFactory property="quantity" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn prefWidth="200.0" resizable="false" text="Subtotal">
                               <cellValueFactory>
                                   <PropertyValueFactory property="subTotal" />
                               </cellValueFactory>
                           </TableColumn>
                       </columns>
                   </TableView>
                  <Label layoutX="679.0" layoutY="401.0" text="Total Amount">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <Label alignment="CENTER_RIGHT" layoutX="692.0" layoutY="421.0" prefHeight="16.0" prefWidth="88.0" text="0.00" textAlignment="RIGHT" />
               </children>
            </AnchorPane>
            <JFXButton layoutX="21.0" layoutY="556.0" mnemonicParsing="false" onAction="#backToWelcome" prefHeight="26.0" prefWidth="98.0" styleClass="btn-light" stylesheets="@style.css" text="Back" />
            <JFXButton layoutX="683.0" layoutY="556.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="98.0" styleClass="btn-accent" text="Save" />
            <JFXButton layoutX="567.0" layoutY="556.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="98.0" styleClass="btn-light" text="Generate" />
         </children>
      </AnchorPane>
   </children>
</StackPane>
